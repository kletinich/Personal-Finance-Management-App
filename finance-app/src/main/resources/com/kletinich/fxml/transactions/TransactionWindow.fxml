<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="transactionWindow" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kletinich.Controllers.TransactionWindowController">
   <children>
      <VBox layoutY="1.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="42.0" prefWidth="600.0">
               <children>
                  <Label fx:id="balanceLabel" prefHeight="22.0" prefWidth="119.0" text="Total balance: 0">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="typeFilter" prefHeight="26.0" prefWidth="133.0" promptText="Transaction Type">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox fx:id="categoryFilter" prefHeight="26.0" prefWidth="91.0" promptText="Category">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <TextField fx:id="amountTextField" onMouseClicked="#resetAmountBox" prefHeight="26.0" prefWidth="106.0" promptText="Amount">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="filterButton" mnemonicParsing="false" onAction="#filterButtonPressed" text="Filter">
                     <HBox.margin>
                        <Insets bottom="5.0" left="50.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Pane prefHeight="28.0" prefWidth="600.0" />
            <TableView fx:id="transactionsTable" prefHeight="242.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" minWidth="0.0" prefWidth="26.399993896484375" text="ID" />
                  <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                  <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                  <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
                  <TableColumn fx:id="budgetSavingColumn" prefWidth="118.4000244140625" text="Budget/Saving" />
                  <TableColumn fx:id="noteColumn" prefWidth="76.79998779296875" text="Note" />
                  <TableColumn fx:id="deleteColumn" prefWidth="181.0" />
                  <TableColumn fx:id="updateColumn" prefWidth="75.0" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="86.0" prefWidth="228.0" />
                  <Button fx:id="newTransactionButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#newTransactionButtonPressed" prefHeight="26.0" prefWidth="138.0" text="Add New Transaction">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Button>
                  <Pane prefHeight="86.0" prefWidth="201.0" />
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
